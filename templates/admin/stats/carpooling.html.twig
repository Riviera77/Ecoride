{% extends 'base.html.twig' %}

{% block title %}Statistiques Covoiturages{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>Nombre de covoiturages par jour</h2>
        <canvas id="carpoolingChart" data-chart='{{ carpooling_stats|json_encode|raw }}' width="400" height="200"></canvas>
    </div>

    <a href="{{ path('admin_dashboard') }}">Retour</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ asset('js/admin-dashboard.js') }}"></script>
{% endblock %}