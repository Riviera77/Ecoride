{% extends 'base.html.twig' %}

{% block title %}Statistiques Crédits{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Crédits gagnés par jour</h2>

    <div class="alert alert-info text-start">
        <strong>Total des crédits gagnés par la plateforme :</strong>
        {{ total_credits }} crédits
    </div>

    <canvas id="creditChart" data-chart='{{ credit_stats|json_encode|raw }}' width="400" height="200"></canvas>
</div>

<a href="{{ path('admin_dashboard') }}">Retour</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ asset('js/admin-credits.js') }}"></script>
{% endblock %}