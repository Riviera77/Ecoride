{% extends 'base.html.twig' %}

{% block title %}Signaler un problème{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>❌ Signaler un problème</h1>
    <p>Trajet concerné : {{ carpooling.departureAddress }} → {{ carpooling.arrivalAddress }}</p>

    {{ form_start(form) }}
        {{ form_row(form.message) }}

        <button type="submit" class="btn btn-danger mt-3">Envoyer le signalement</button>
    {{ form_end(form) }}
</div>
{% endblock %}