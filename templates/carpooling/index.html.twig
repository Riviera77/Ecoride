{% extends 'base.html.twig' %}

{% block title %}CarpoolingIndex{% endblock %}

{% block body %}

<div class="px-4 py-5 my-5 text-primary">
    <h1 class="display-5 pb-4">Vous recherchez un covoiturage<br>
        Nous avons le trajet qu'il vous faut !</h1>
</div>

<div class="container px-4 py-5 my-5 text-center align-items-center rounded-3 border shadow-lg">   
        <div class="p-3 p-lg-6 pt-lg-3">
            <h2 class="pb-4 text-primary">La solution alternative de covoiturage</h2>
            <div class="d-flex gap-2 d-md-flex justify-content-md-center mb-4 mb-lg-4">
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-sm-12 mb-3">
                        <label for="departureCityInput" class="form-label text-primary"><i class="bi bi-geo-alt"></i> Ville de départ</label>
                        <input type="text" id="departureCityInput" class="form-control" placeholder="Ville de départ" aria-label="departure-city">
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 mb-3">
                        <label for="arrivalCityInput" class="form-label text-primary"><i class="bi bi-geo-alt"></i> Ville d'arrivée</label>
                        <input type="text" id="arrivalCityInput" class="form-control" placeholder="Ville d'arrivée" aria-label="arrival-city">
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 mb-3">
                        <label for="dateInput" class="form-label text-primary"><i class="bi bi-calendar2-date"></i> Date</label>
                        <input type="date" id="dateInput" class="form-control" placeholder="Date" aria-label="date">
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2 justify-content-md-center mb-4 mb-lg-3">
                <button type="button" role="search" class="btn btn-primary btn-lg px-4 me-md-6 fw-bold"><i class="bi bi-search"></i> Rechercher</button>
            </div>
        </div>
</div>

{% endblock %}
